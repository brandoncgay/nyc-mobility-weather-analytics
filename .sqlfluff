[sqlfluff]
templater = dbt
dialect = snowflake
max_line_length = 100
indent_unit = space
indented_joins = true
indented_ctes = true

[sqlfluff:indentation]
indent_unit = space
tab_space_size = 4

[sqlfluff:templater:dbt]
project_dir = ./dbt

[sqlfluff:rules]
tab_space_size = 4
max_line_length = 100
indent_unit = space
comma_style = trailing
allow_scalar = true

[sqlfluff:rules:L010]
# Keywords should be lowercase
capitalisation_policy = lower

[sqlfluff:rules:L030]
# Enforce consistent function name case
capitalisation_policy = lower

[sqlfluff:rules:L014]
# Unquoted identifiers should be lowercase
extended_capitalisation_policy = lower
